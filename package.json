{
  "name": "boilerplate-microservice",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.json",
    "test": "jest --passWithNoTests",
    "lint": "eslint . --ext .ts",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "cli": "tsx src/cli.ts",
    "openapi:serve": "npx redocly preview-docs docs/openapi.yaml",
    "generate:openapi": "node scripts/generate-openapi.js || true"
  },
  "dependencies": {
    "express": "^4.19.2",
    "pino": "^9.5.0",
    "pino-http": "^9.0.0",
    "prom-client": "^15.1.3",
    "zod": "^3.23.8",
    "uuid": "^10.0.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "supertest": "^7.0.0",
    "@types/supertest": "^2.0.16",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "jest": "^29.7.0",
    "tsx": "^4.19.0"
  }
}
